<div class="daily-sports-picks-section">
  {%- assign active_pick_blocks = section.blocks | where: 'type', 'active_pick' -%}
  {%- assign visible_picks = 0 -%}
  {%- assign now_timestamp = 'now' | date: '%s' -%}

  {%- capture picks_html -%}
    {%- for block in active_pick_blocks -%}
      {%- assign show_pick = true -%}
      
      {%- if block.settings.enable_expiry -%}
        {%- assign expiry_string = block.settings.expiry_date | append: ' ' | append: block.settings.expiry_time -%}
        {%- assign expiry_timestamp = expiry_string | date: '%s' -%}
        {%- if expiry_timestamp <= now_timestamp -%}
          {%- assign show_pick = false -%}
        {%- endif -%}
      {%- endif -%}

      {%- if show_pick -%}
        {%- assign visible_picks = visible_picks | plus: 1 -%}
        <div class="active-pick-wrapper" {{ block.shopify_attributes }}>
          {% render 'active-pick-card', block: block %}
        </div>
      {%- endif -%}
    {%- endfor -%}
  {%- endcapture -%}

  {%- if visible_picks > 0 -%}
    <!-- Active Picks View -->
    <div class="active-picks-container">
      {{ picks_html }}
    </div>
  {%- else -%}
    <!-- Placeholder / No Picks View -->
    {%- if section.settings.heading_text != blank -%}
      <h2 class="pick-header">{{ section.settings.heading_text }}</h2>
    {%- endif -%}
    
    <div class="pick-card">
      <div class="pick-main-content">
        <div class="pick-message-col">
          {%- if section.settings.message_text != blank -%}
            <div class="pick-message-title">{{ section.settings.message_text }}</div>
          {%- endif -%}
          
          {%- if section.settings.button_label != blank -%}
            <a href="{{ section.settings.button_link | default: routes.root_url }}" class="pick-btn">{{ section.settings.button_label }}</a>
          {%- endif -%}
        </div>
        <div class="pick-image-col">
          {%- if section.settings.image != blank -%}
            {{ section.settings.image | image_url: width: 400, height: 300, crop: 'center' | image_tag: loading: 'lazy', width: 400, height: 300 }}
          {%- else -%}
            <!-- Placeholder image resembling the tech illustration in the mockup -->
            <img src="https://placehold.co/400x300/e2e8f0/1e293b?text=Sports+Picks+Illustration" alt="Sports Picks Illustration" width="400" height="300">
          {%- endif -%}
        </div>
      </div>

      {%- if section.settings.info_text != blank -%}
        <div class="pick-secondary-text">
          {{ section.settings.info_text }}
        </div>
      {%- endif -%}
    </div>
  {%- endif -%}
</div>

<script>
  function toggleReasoning(blockId, btn) {
    var content = document.getElementById('reasoning-' + blockId);
    var icon = btn.querySelector('.ap-icon');
    
    if (content.classList.contains('open')) {
      content.style.maxHeight = null; // Collapse
      content.classList.remove('open');
      if(icon) icon.style.transform = 'rotate(0deg)';
    } else {
      content.classList.add('open');
      content.style.maxHeight = content.scrollHeight + 40 + "px"; // Expand with buffer for padding
      if(icon) icon.style.transform = 'rotate(180deg)';
    }
  }
</script>

