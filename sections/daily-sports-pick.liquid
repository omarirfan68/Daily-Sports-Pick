  /* --- Active Pick Card Styles --- */
  .active-pick-card {
    background-color: #edf7e2;
    background-image: 
      linear-gradient(#abc785, #abc785), /* 2px Border Line */
      linear-gradient(90deg, #cce8aa 0%, #edf7e2 100%); /* Header Gradient */
    background-size: 
      100% 2px, 
      100% 185px; /* Fixed Height 185px */
    background-position: 
      0 185px, 
      top left;
    background-repeat: no-repeat;
    border-radius: 16px;
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 8px 10px -6px rgba(0, 0, 0, 0.1);
    border: 1px solid #e2e8f0;
    max-width: 600px; /* Reduced width to match card style */
    margin: 0 auto 20px auto;
    overflow: hidden;
    text-align: left;
    padding-bottom: 5px; /* Slight padding for the inner card margin */
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .active-pick-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  /* Card Header */
  .ap-header {
    background-color: transparent;
    padding: 20px 20px 15px 20px;
    position: relative;
    margin-bottom: 15px; /* Push body down slightly from the line */
  }

  .ap-meta-row {
    display: flex;
    justify-content: space-between;
    font-size: 13px;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 12px;
