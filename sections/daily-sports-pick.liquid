    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
    flex-wrap: nowrap; /* Force single line */
    gap: 10px;
  }

  .ap-tags {
    display: flex;
    gap: 8px;
    flex-shrink: 1; /* Allow tags to shrink if needed */
    overflow: hidden; /* Prevent overflow */
  }

  .ap-tag {
    font-size: 12px;
    font-weight: 700;
    color: #fff;
    padding: 4px 10px;
    border-radius: 4px;
    text-transform: uppercase;
    white-space: nowrap; /* Keep tag text on one line */
  }

  .ap-tag.blue { background-color: #0ea5e9; }
  .ap-tag.gold { background-color: #d97706; }

  .ap-stars {
    color: #d97706; /* Gold color */
    font-size: 18px;
    letter-spacing: 2px;
    flex-shrink: 0; /* Don't squash the stars */
    display: flex;
    align-items: center;
  }

  .ap-pick-line {
    display: flex;
    justify-content: space-between;
    align-items: flex-start; /* Align top in case of wrapping, but we'll fix button */
    font-size: 18px;
    font-weight: 700;
    color: #1a202c;
    margin-bottom: 24px;
    gap: 10px;
  }

  .ap-reasoning-btn {
    font-size: 13px;
    color: #475569;
    background: #f1f5f9;
    padding: 4px 12px;
    border-radius: 4px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 4px;
    white-space: nowrap; /* Prevent breaking like "Reasoning \n v" */
    flex-shrink: 0;
    line-height: 1;
  }

  .ap-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
    margin-top: 0; 
    transition: transform 0.2s ease; /* Ensure transition exists here */
  }
  
  /* Mobile Adjustments */
  @media (max-width: 480px) {
    .ap-tag {
      font-size: 10px;
      padding: 3px 6px;
    }
    .ap-reasoning-btn {
      font-size: 11px;
      padding: 4px 8px;
